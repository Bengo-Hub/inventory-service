# Inventory Service environment template
INVENTORY_APP_NAME=inventory-service
INVENTORY_APP_ENV=development
INVENTORY_APP_REGION=africa-east-1
INVENTORY_APP_VERSION=0.1.0

INVENTORY_HTTP_HOST=0.0.0.0
INVENTORY_HTTP_PORT=4102
INVENTORY_HTTP_READ_TIMEOUT=20s
INVENTORY_HTTP_WRITE_TIMEOUT=20s
INVENTORY_HTTP_IDLE_TIMEOUT=90s
# TLS configuration for HTTPS (mkcert certificates) - local development only
# Uncomment and set paths to enable HTTPS
# INVENTORY_HTTP_TLS_CERT_FILE=./config/certs/inventory.codevertex.local.pem
# INVENTORY_HTTP_TLS_KEY_FILE=./config/certs/inventory.codevertex.local-key.pem

INVENTORY_POSTGRES_URL=postgres://postgres:postgres@localhost:5432/inventory?sslmode=disable
INVENTORY_POSTGRES_MAX_OPEN_CONNS=30
INVENTORY_POSTGRES_MAX_IDLE_CONNS=15
INVENTORY_POSTGRES_CONN_MAX_LIFETIME=45m

INVENTORY_REDIS_ADDR=localhost:6380
INVENTORY_REDIS_USERNAME=
INVENTORY_REDIS_PASSWORD=
INVENTORY_REDIS_DB=0
INVENTORY_REDIS_TLS_REQUIRED=false
INVENTORY_REDIS_DIAL_TIMEOUT=5s

INVENTORY_EVENT_BUS=nats
INVENTORY_NATS_URL=nats://localhost:4222
INVENTORY_NATS_STREAM=inventory
INVENTORY_NATS_DELIVER_GROUP=inventory-workers
INVENTORY_NATS_DLQ_STREAM=inventory-dlq

INVENTORY_OTLP_ENDPOINT=

# Auth Service SSO (JWT) settings
INVENTORY_AUTH_SERVICE_URL=https://auth.codevertex.local:4101
INVENTORY_AUTH_ISSUER=https://auth.codevertex.local:4101
INVENTORY_AUTH_AUDIENCE=bengobox
INVENTORY_AUTH_JWKS_URL=https://auth.codevertex.local:4101/api/v1/.well-known/jwks.json
INVENTORY_AUTH_JWKS_CACHE_TTL=3600s
INVENTORY_AUTH_JWKS_REFRESH_INTERVAL=300s

